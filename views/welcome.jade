extends layout

block content
    - var rows = null;
    - var getTracks = function(){jQuery.ajax({type: 'GET', async: false, url: '/api/mytracks', dataType: 'JSON'}).done(function(resp){rows = resp;});};
    div.container-fluid
        div.row(class = "content")
            div.col-sm-10
                div.row(class = "librarySubheader")
                    div.dropdown
                        button.btn(class = "btn-default dropdown-toggle" type="button" id="chooseTrackDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true") List tracks...
                            span.caret
                        ul.dropdown-menu(aria-labelledby="chooseTrackDropdown")
                            li
                                a(href="/api/alltracks") All tracks (personal and group)
                            li
                                button(onclick = getTracks()) Only my tracks
            if rows != null
                each track in rows
                    div.row
                        p #{track.trackName}  |  #{track.length}  |  #{track.artistName}  |  #{track.albumName}


            div.col-sm-2(class = "sidenav")
                div.well
                    div.row
                        p Playlist 1
                    div.row
                        p Playlist 2
                    div.row
                        p Playlist 3

    footer.container-fluid(class = "text-center")
        audio
            controls
            source(src = "" type = "audio/mpeg")
